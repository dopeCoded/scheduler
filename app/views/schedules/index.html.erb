<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>メモ</th>
      <th>更新日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <p>Today: <%= Date.today.strftime('%Y/%m/%d') %></p>
    <p>Total: <%= @schedules.count %></p>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.id %></td>
        <td><%= schedule.title %></td>
        <td><%= schedule.start_date.strftime('%Y/%m/%d') %></td>
        <td><%= schedule.end_date.strftime('%Y/%m/%d') %></td>
        <td><%= schedule.all_day ? '○' : '' %></td>
        <td><%= schedule.memo %></td>
        <td><%= schedule.updated_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= button_to 'Destroy', schedule, method: :delete, data: { controller: "confirm", action: "confirm#confirm" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule', new_schedule_path %>
